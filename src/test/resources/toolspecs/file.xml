<?xml version="1.0" encoding="utf-8" ?>
<tool xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://scape-project.eu/tool https://raw2.github.com/openplanets/scape-toolspecs/master/toolspec.xsd"
    xmlns="http://scape-project.eu/tool" xmlns:xlink="http://www.w3.org/1999/xlink" schemaVersion="1.0" name="file" version="1.0.1"
    homepage="http://bla.org/">
    <installation>
        <dependency operatingSystemName="Debian">file</dependency>
        <license type="Apache Licence 2.0">Apache License, Version 2.0</license>
    </installation>
    <otherProperties>
        <property name="cost">0</property>
    </otherProperties>
    <operations>
        <operation name="identify">
            <description>Identifies a files mime-type</description>
            <command>file -b ${input}</command>
            <inputs>
                <input name="input" required="true">
                    <description>Reference to input file</description>
                </input>
            </inputs>
            <outputs>
                <output name="output" required="true">
                    <description>mime type</description>
                </output>
            </outputs>
        </operation>
        <operation name="identify-stdin">
            <description>Identifies a files mime-type reading from stdin</description>
            <command>file -b -</command>
            <inputs>
                <stdin required="true">
                    <description>Reference to input file</description>
                </stdin>
            </inputs>
            <outputs>
                <output name="output" required="true">
                    <description>mime type</description>
                </output>
            </outputs>
        </operation>
    </operations>
</tool>
